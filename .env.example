# 💳 PayPal Configuration (Sandbox/Production)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Use sandbox for development, production for live
# Sandbox: https://developer.paypal.com/
# Production: https://www.paypal.com/

# 🪣 Storage Configuration - Switch Fácil
# ================================================

# 🎣 TIPO DE STORAGE
STORAGE_TYPE=api             # local | cloud | api

# 📎 API STORAGE (cuando STORAGE_TYPE=api)
STORAGE_API_URL=https://cidth.com/api
STORAGE_API_TOKEN=your-bearer-token-here

# 📧 Email API Configuration
EMAIL_API_URL=https://cidth.com/api-mail/public
EMAIL_API_TOKEN=your-email-api-token-here
EMAIL_HMAC_SECRET=your-hmac-secret-here

# 🌍 URLs Públicas
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 📧 SMTP Configuration (opcional para envío de boletos)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 🔗 Domain for email links (legacy)
NEXT_PUBLIC_DOMAIN=http://localhost:3000
